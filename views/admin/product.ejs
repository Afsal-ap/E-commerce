<script>

function confirmListProduct(userId) { 
    Swal.fire({
        title: "Are you sure?",
        text: "You want to list this product?",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, unlist it!"
    }).then((result) => {
        if (result.isConfirmed) {
            listProduct(userId);
        }
    });
}  


function confirmUnlistProduct(userId) {
        Swal.fire({
            title: "Are you sure?",
            text: "You want to unlist this product?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, list it!"
        }).then((result) => {
            if (result.isConfirmed) {
                unlistProduct(userId);
            }
        });
    }

       
                           function unlistProduct(id) {
                                    
                                  
                                  fetch(`/admin/unlistProduct/${id}`, { method: 'POST' })
                                    .then(response => response.json())
                                    .then(data => {
                                      if (data.unlistProduct===true) {
                                       location.reload() //       
                                       
                                      } else{
                                        console.error(data.error)
                                      }
                                    })
                                    .catch(error => console.error(error));
                                }


                                function listProduct(id) {
                                    
                                  
                                  fetch(`/admin/listProduct/${id}`, { method: 'POST' })
                                    .then(response => response.json())
                                    .then(data => {
                                      if (data.listProduct===true) {
                                       location.reload() //       
                                       
                                      } else{
                                        console.error(data.error)
                                      }
                                    })
                                    .catch(error => console.error(error));
                                }
</script>

<script>
    
    document.addEventListener('click', async function(event) {
    if (event.target.classList.contains('apply-offer-button')) {
        event.preventDefault();

        const offerId = event.target.getAttribute('data-offer-id');
        const productId = event.target.getAttribute('data-product-id');
        console.log('id:', offerId);
        console.log('id pro:', productId);

        try {
            const response = await fetch('/admin/applyOffer', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ offerId: offerId, productId: productId })
            });

            if (!response.ok) {
                throw new Error('Network response was not ok');
            }

            const data = await response.json();
            if (data.success) {
                Swal.fire({
                    title: "Offer Applied Successfully",
                    icon: "success",
                    confirmButtonText: "OK",
                    
                });
                location.reload()
            } else {
                Swal.fire({
                    title: "No Offer Available",
                    icon: "error",
                    confirmButtonText: "OK",
                })
            }
        } catch (error) {
            console.error('Fetch Error:', error);
        }
    }
});

</script>
<script>
    function removeOffer(productId) {
        console.log(productId,"kityu");
        if (confirm('Are you sure you want to remove the offer?')) {
            fetch('/admin/removeOffer', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId: productId })
            })
            .then(response => {
                if (response.ok) {
                    location.reload();
                } else {
                    throw new Error('Failed to remove offer');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Failed to remove offer. Please try again.');
            });
        }
    }
</script>