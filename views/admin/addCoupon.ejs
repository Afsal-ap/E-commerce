  <div class="card"> 
<div class="card-body">
    <div class="row">
        <div class="col-md-10">
            <form action="" method="post" id="couponForm">
      
                 <div class="mb-2">
                    <label class="form-label">Coupon Name</label>
                    <input type="text" id="couponName" placeholder="Type here" name="name" class="form-control">
                  <div class="error-message" style="color: red;" id="nameError"></div>
                </div>
                 
                <div class="mb-2">
                    <label class="form-label">Coupon Code</label>
                    <input type="text" id="couponCode" placeholder="Type here" name="code" class="form-control">
                  <div class="error-message" style="color: red;" id="codeError"></div>
                </div>
                 
                <div class="mb-2">
                    <label class="form-label">Discount Amount</label>
                    <input type="text" id="discAmount" placeholder="Type here" name="disAmount" class="form-control">
                  <div class="error-message" style="color: red;" id="discountError"></div>
                </div>
                 
                <div class="mb-2">
                    <label class="form-label">Activation Date</label>
                    <input type="date" id="activationDate" placeholder="Type here" name="actDate" class="form-control">
                  <div class="error-message" style="color: red;" id="activationError"></div>
                </div>
                 
                <div class="mb-2">
                    <label class="form-label">Expire Date</label>
                    <input type="date" id="expDate" placeholder="Type here" name="exDate" class="form-control">
                  <div class="error-message" style="color: red;" id="expError"></div>
                </div>
                 
                <div class="mb-2">
                    <label class="form-label">Criteria Amount</label>
                    <input type="text" id="criteriaAmount" placeholder="Type here" name="criteriaAmount" class="form-control">
                  <div class="error-message" style="color: red;" id="critError"></div>
                </div>
                <div class="d-grid col-md-2">
                    <button class="btn btn-primary" type="submit"  >Apply </button>
                </div>
            </form>
        </div>
      </div>
    </div>
</div>
   
<script>
  document.getElementById('couponForm').addEventListener('submit', function(event) {
        event.preventDefault();

        var name = document.getElementById('couponName').value.trim();
        var code = document.getElementById('couponCode').value.trim();
        var discAmount = document.getElementById('discAmount').value.trim();
        var activationDate = document.getElementById('activationDate').value.trim();
        var expDate = document.getElementById('expDate').value.trim();
        var criteriaAmount = document.getElementById('criteriaAmount').value.trim();

        // Reset error messages
        document.getElementById('nameError').textContent = '';
        document.getElementById('codeError').textContent = '';
        document.getElementById('discountError').textContent = '';
        document.getElementById('activationError').textContent = '';
        document.getElementById('expError').textContent = '';
        document.getElementById('critError').textContent = '';

        // Validate each field
        var isValid = true;
        if (name === '') {
            document.getElementById('nameError').textContent = 'Coupon Name is required';
            isValid = false;
        }
        if (code === '') {
            document.getElementById('codeError').textContent = 'Coupon Code is required';
            isValid = false;
        }
        if (discAmount === '' || isNaN(discAmount) || discAmount <= 0) {
            document.getElementById('discountError').textContent = 'Enter valid discount amount ';
            isValid = false;
        }
        if (activationDate === '') {
            document.getElementById('activationError').textContent = 'Activation Date is required';
            isValid = false;
        }
        if (expDate === '') {
            document.getElementById('expError').textContent = 'Expiry Date is required';
            isValid = false;
        }
        if (activationDate > expDate) {
            document.getElementById('activationError').textContent = 'Activation Date must be before the expiry date';
            isValid = false;
        }
        if (criteriaAmount === '' || isNaN(criteriaAmount) || criteriaAmount <= 0) {
            document.getElementById('critError').textContent = ' Enter valid Criteria amount ';
            isValid = false;
        }
       

        if (isValid) {
            this.submit();
        }
    });
</script>

