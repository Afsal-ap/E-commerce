<script>
   function getSalesReport(selectedValue) {
    location.href = `/admin/Sales?reportType=${selectedValue}`
   }
</script>


<script>
    function applyDateRange() {
    const dateStart = document.getElementById('startDate').value;
    const dateEnd = document.getElementById('endDate').value;
      console.log(dateEnd );
    location.href = `/admin/Sales?startDate=${ dateStart}&endDate=${dateEnd}`;
    }
</script>

<script>
    // Get the current date in the format YYYY-MM-DD
    const currentDate = new Date().toISOString().slice(0, 10);

    // Set the default value of the date inputs to the current date
    document.getElementById('startDate').value = currentDate;
    document.getElementById('endDate').value = currentDate;
</script>

