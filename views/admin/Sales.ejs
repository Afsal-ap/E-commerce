<div class="card mb-4">
    <header class="card-header">
        <h4 class="card-title">Latest orders</h4>
        <div class="row align-items-center">
            <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                <div class="custom_select">
                    <select class="form-select select-nice"  id="reportTypeSelect" onchange="getSalesReport(value)">
                        <option value="Default" selected>All</option>
                        <option value="Daily ">Daily</option>
                        <option value="Weekly">Weekly</option>
                        <option value="Monthly">Monthly</option>
                        <option value="Yearly">Yearly</option>
                       
                    </select>
                </div>
                 
            </div>
         <div class="col-md-2  mb-md-0 mb-3" > 

         <a href="/admin/excelReport" download="sales_report.xlsx"> <button class="btn btn-primary btn-sm">EXCEL</button></a>
            </div>
            <div class="col-md-3 col-12  mb-md-0 mb-3" >    
             <a href="/admin/pdf" download="sales_report.pdf"> <button class="btn btn-primary btn-sm"> PDF</button></a>
            </div>
                <div class="col-md-2  mb-md-0 mb-3">
                    <label for="startDate">From:</label>
                    <input type="date" id="startDate" value="2021-05-02" class="form-control"/>
                    
                    <label for="endDate">To:</label>
                    <input type="date" id="endDate" value="2021-05-02" class="form-control"/>
                    
                    <button type="button" class="btn btn-primary" style="height: 4px; width: 4px;" onclick="applyDateRange()">Apply</button>
                </div>
                
            
            
                
                
            

            <!-- <div class="col-md-2 col-6">
                <div class="custom_select">
                    <select class="form-select select-nice">
                        <option selected>Status</option>
                        <option>All</option>
                        <option>Paid</option>
                        <option>Chargeback</option>
                        <option>Refund</option>
                    </select>
                </div>
            </div> -->
        </div>
    </header>
    <div class="card-body">
        <div class="table-responsive">
            <div class="table-responsive">
                <table class="table align-middle table-nowrap mb-0">
                    <thead class="table-light">
                        <tr>
                           
                            <th class="align-middle" scope="col">NO</th>
                            <th class="align-middle" scope="col">Billing Name</th>
                          
                            <th class="align-middle" scope="col">Total</th>
                            <th class="align-middle" scope="col">Payment Status</th>
                            <th class="align-middle" scope="col">Payment Method</th>
                            <th class="align-middle" scope="col">discount</th>
                            <th class="align-middle" scope="col">coupon amount</th>

                        </tr>
                    </thead>
                    <tbody>
                        <% if (salesReport && salesReport.orders.length > 0) { %>
                            <% const salesPerPage = 4; %>                     
                            <% const startIndex = (currentPage - 1) * salesPerPage + 1; %>
                            <% salesReport.orders.forEach(function(order, index) { %>
                                <tr>
                                    <td><%= startIndex +  index %></td>
                                    <td><%= order.delivery_address.name %></td>
                                    
                                    <td><%= order.subtotal %></td>
                                    <td>
                                        <span class="badge badge-pill badge-soft-success"><%= order.orderStatus %></span>
                                    </td>
                                    <td><i class="material-icons md-payment font-xxl text-muted mr-5"></i><%= order.payment %></td>
                                    <td><%= order.discountAmount || 0 %></td> <!-- Display discount amount -->
                                    <td><%= order.couponAmount || 0 %></td> <!-- Display coupon amount -->
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <h1>No orders</h1>
                        <% } %>

                    
                                 </tbody>
                </table>
            </div>
        </div>
        <!-- table-responsive end// -->

        <div class="pagination-area mt-15 mb-50">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-start">
                    <% for (let page = 1; page <= totalPages; page++) { %>
                        <% if (page === currentPage) { %>
                            <li class="page-item active"><a class="page-link" href="#"><%= page %></a></li>
                        <% } else { %>
                            <li class="page-item"><a class="page-link" href="/admin/Sales?page=<%= page %>"><%= page %></a></li>
                        <% } %>
                    <% } %>
                </ul>
            </nav>
        </div>
    </div>
