        <script>
            document.getElementById('editProductForm').addEventListener('submit', (e) => {
                const productName = document.getElementById('product-name').value.trim();
                const productQuantity = document.getElementById('product-quantity').value.trim();
                const productPrice = document.getElementById('product-price').value.trim();
                const productDescription = document.getElementById('product-description').value.trim();
        
                const productTitleError = document.getElementById('productTitleError');
                const quantityError = document.getElementById('quantityError');
                const priceError = document.getElementById('priceError');
                const descriptionError = document.getElementById('descriptionError');


        
                let isValid = true;
        
                // Validate product title
                if (productName === '') {
                    productTitleError.textContent = 'Product title is required.';
                    isValid = false;
                } else {
                    productTitleError.textContent = '';
                }
             
             // validate quantity 

             if (productQuantity === '') {
                quantityError.textContent = 'quantity is required.';
                    isValid = false;
                } else if (isNaN(productQuantity) || Number(productQuantity) < 0) {
                    quantityError.textContent = 'Please enter a valid quantity.';
                    isValid = false;
                } else {
                    quantityError.textContent = '';
                }
                
        
                // Validate price
                if (productPrice === '') {
                    priceError.textContent = 'Price is required.';
                    isValid = false;
                } else if (isNaN(productPrice) || Number(productPrice) <=0) {
                    priceError.textContent = 'Please enter a valid price.';
                    isValid = false;
                } else {
                    priceError.textContent = '';
                }
        
                // Validate description
                if (productDescription === '') {
                    descriptionError.textContent = 'Description is required.';
                    isValid = false;
                } else {
                    descriptionError.textContent = '';
                }
              
        
                if (!isValid) {
                    e.preventDefault(); 
                }
            });

    
        </script>

