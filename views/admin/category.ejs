        <script>

            function confirmList(userId) {
                Swal.fire({
                    title: "Are you sure?",
                    text: "You want to list this product?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, list it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        unlist(userId);
                    }
                });
            }


            function confirmUnlist(userId) {
                Swal.fire({
                    title: "Are you sure?",
                    text: "You want to unlist this product?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, unlist it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        list(userId);
                    }
                });
            }


            function unlist(id) {
                console.log("yy");

                fetch(`/admin/unlistCategory/${id}`, { method: 'POST' })
                    .then(response => response.json())
                    .then(data => {
                        if (data.unlist === true) {
                            location.reload() //       

                        } else {
                            console.error(data.error)
                        }
                    })
                    .catch(error => console.error(error));
            }

            function list(id) {
                console.log("yayay");

                fetch(`/admin/listCategory/${id}`, { method: 'POST' })
                    .then(response => response.json())
                    .then(data => {
                        if (data.list === true) {
                            location.reload()

                        } else {
                            console.error(data.message);
                        }
                    })
                    .catch(error => console.error(error));
            }

        </script>
     

        <script>
            function removeCategoryOffer(categoryId) {
              
                if (confirm('Are you sure you want to remove the offer?')) {
                    fetch('/admin/removeCategoryOffer', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ categoryId: categoryId })
                    })
                        .then(response => {
                            if (response.ok) {
                                location.reload();
                            } else {
                                throw new Error('Failed to remove offer');
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            alert('Failed to remove offer. Please try again.');
                        });
                }
            }
        </script>
        <script>
            let catId;
            function openModal(categoryId) {
                catId = categoryId;
                $('#modalCategoryOffer').modal('show');
            }

            async function apply(offerId){
                console.log(offerId,catId);

                try {
                        const response = await fetch('/admin/applyCategoryOffer', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ offerId: offerId, categoryId: catId })
                        });

                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }

                        const data = await response.json();
                        if (data.success) {
                            Swal.fire({
                                title: "Offer Applied Successfully",
                                icon: "success",
                                confirmButtonText: "OK",
                            });
                        } else {
                            Swal.fire({
                                title: "No Offer Available",
                                icon: "error",
                                confirmButtonText: "OK",
                            })
                        }
                    } catch (error) {
                        console.error('Fetch Error:', error);
                    }

            }
        </script>   

