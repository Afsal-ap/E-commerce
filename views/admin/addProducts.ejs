            if (!validateImage('imageInput1', 'imagePreview1', 'Image 1 is required.')) return false;
            if (!validateImage('imageInput2', 'imagePreview2', 'Image 2 is required.')) return false;
            if (!validateImage('imageInput3', 'imagePreview3', 'Image 3 is required.')) return false;
            if (!validateImage('imageInput4', 'imagePreview4', 'Image 4 is required.')) return false;
            // Add similar lines for Image 2, Image 3, and Image 4

            return true; // If all validation passes, allow the form to submit
        }

        function validateImage(inputId, previewId, errorMessage) {
            var fileInput = document.getElementById(inputId);
            var imagePreview = document.getElementById(previewId);

            // Check if a file is selected
            if (!fileInput.files || fileInput.files.length === 0 ) {
                document.getElementById('imagefiles1').innerHTML = errorMessage;
               
                return false;
            }
            if (!fileInput.files || fileInput.files.length === 0 ) {
                document.getElementById('imagefiles2').innerHTML = errorMessage;
               
                return false;
            }
            if (!fileInput.files || fileInput.files.length === 0 ) {
                document.getElementById('imagefiles3').innerHTML = errorMessage;
               
                return false;
            }
            if (!fileInput.files || fileInput.files.length === 0 ) {
                document.getElementById('imagefiles4').innerHTML = errorMessage;
               
                return false;
            }

            // Additional checks if needed (e.g., file type, size, etc.)

            return true;
        }

        function validateField(fieldName, errorDiv, errorMessage) {
            var field = document.getElementById(fieldName).value.trim();

            if (field === "") {
                document.getElementById(errorDiv).innerHTML = errorMessage;
                return false;
            }

            return true;
        }

        function resetErrorMessages() {
            // Reset all error messages to empty
            document.getElementById('productTitleError').innerHTML = "";
            document.getElementById('quantityError').innerHTML = "";
            document.getElementById('priceError').innerHTML = "";
            document.getElementById('descriptionError').innerHTML = "";

            // Reset category error message if needed
            // document.getElementById('categoryError').innerHTML = "";
        }
        





          function previewImage(input, previewId){
            console.log("rrrr");
            const preview = document.getElementById(previewId);
            const file = input.files[0];

            if(file){
               const reader = new FileReader();
               
               reader.onload = function (e) {
                const image = new Image();
                image.src = e.target.result;
                image.width = 130;

                preview.innerHTML = '';
                preview.appendChild(image)
               }
               reader.readAsDataURL(file);

            }else{
                preview.innerHTML = '';
            }
          }
      </script>



 
