                            <td> <%= new Date(coupons[i].expiryDate).toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric', year: 'numeric' }) %> %></td>
                             
                            <td> <button  onclick="deleteCoupon('<%=coupons[i]._id %>')">Delete</button></td>

                            <% } %>
                            <% } %>
                            <% } %>
            </tbody>
 
        </table>
